{
  "extends": [
    "stylelint-config-standard",
    "stylelint-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "declaration-block-trailing-semicolon": null,
    "no-extra-semicolons": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "import", "forward"]
      }
    ]
  }
}
